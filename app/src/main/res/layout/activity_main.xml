<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pfg.com.androidcode.MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ActivityA"/>

    <Button
        android:id="@+id/camera_basic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to basic"/>

    <Button
        android:id="@+id/camera_raw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to raw"/>

    <Button
        android:id="@+id/camera_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to video"/>

    <Button
        android:id="@+id/play_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to rtsp video"/>


</LinearLayout>
